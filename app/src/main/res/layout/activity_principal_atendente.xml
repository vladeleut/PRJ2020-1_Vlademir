<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Activity.PrincipalActivityAtendente">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menu Atendente"
        android:textColor="@color/bootstrap_gray_dark"
        android:background="@color/bootstrap_well_background"
        android:layout_gravity="center"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:textStyle="bold"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/linearLayoutNovoPedido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="150sp"
                    android:layout_height="150sp"
                    android:id="@+id/imgAddProdutos"
                    android:src="@drawable/notes_pencil" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Novo Pedido"
                    android:textColor="@color/bootstrap_gray_dark"
                    android:background="@color/bootstrap_well_background"
                    android:textSize="25dp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/bootstrap_gray"/>

            <LinearLayout
                android:id="@+id/linearLayoutPedidosAbertos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="150sp"
                    android:layout_height="150sp"
                    android:id="@+id/imgPedidosAbertos"
                    android:src="@drawable/notes_icon" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pedidos em aberto"
                    android:textColor="@color/bootstrap_gray_dark"
                    android:background="@color/bootstrap_well_background"
                    android:textSize="25dp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/bootstrap_gray"/>

            <LinearLayout
                android:id="@+id/linnerLayoutVerProntos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="150sp"
                    android:layout_height="150sp"
                    android:id="@+id/imgTotalVendas"
                    android:src="@drawable/iconfinder_money_box_172507" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prontos"
                    android:textColor="@color/bootstrap_gray_dark"
                    android:background="@color/bootstrap_well_background"
                    android:textSize="25dp"
                    android:textStyle="bold"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>