<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/background"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Activity.CriarPedidoActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:text="Criar Pedido"
        android:background="@color/bootstrap_well_background"
        android:textSize="25sp"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        />

    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/edtDescPedido"
        android:hint="Descrição (Mesa)"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textCapWords"
        android:layout_marginTop="10dp"
        app:bootstrapSize="xl"
        app:bootstrapBrand="info"
        app:roundedCorners="true"
        />
    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/edtNomeCliPedido"
        android:layout_margin="10dp"
        android:hint="Cliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textCapWords"
        android:layout_marginTop="10dp"
        app:bootstrapSize="xl"
        app:bootstrapBrand="info"
        app:roundedCorners="true"
        />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/btnCriarPedido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Criar"
        android:layout_marginTop="15dp"
        app:bootstrapBrand="warning"
        app:bootstrapSize="xl"
        app:buttonMode="regular"
        app:showOutline="false"
        app:roundedCorners="true"
        />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/btnCancelarPedido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        android:layout_margin="10dp"
        app:bootstrapBrand="danger"
        app:bootstrapSize="xl"
        app:buttonMode="regular"
        app:showOutline="false"
        app:roundedCorners="true"
        />

</LinearLayout>